<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="item"
            type="android.rezkyauliapratama.com.qlue_project.data.model.Complaint" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <com.app.infideap.stylishwidget.view.ATextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.username}"/>

        <com.app.infideap.stylishwidget.view.ATextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.description}"/>


        <com.app.infideap.stylishwidget.view.ATextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.kelurahan}"/>

        <android.rezkyauliapratama.com.qlue_project.customview.UrlImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>
</layout>
